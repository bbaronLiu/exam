<%- include("_header") -%>

<h2> Find Cars: </h2>
<!-- Not using bootstrap, just a simple form that you may enhance -->
<form action="/" method="POST">
    <table>
        <tr>
            <td><label for="carvin">VIN</label>:</td>
            <td><input type="number" name="carvin" id="carvin" value="<%= car.carvin %>" /></td>
            <td>(equal)</td>
        </tr>
        <tr>
            <td><label for="carmake">Make</label>:</td>
            <td><input type="text" name="carmake" id="carmake" value="<%= car.carmake %>" /></td>
            <td>(starts with)</td>
        </tr>
        <tr>
            <td><label for="carmodel">Model</label>:</td>
            <td><input type="text" name="carmodel" id="carmodel" value="<%= car.carmodel %>" /></td>
            <td>(starts with)</td>
        </tr>
        <tr>
            <td><label for="carmileage">Mileage</label>:</td>
            <td><input type="number" name="carmileage" id="carmileage" value="<%= car.carmileage %>" /></td>
            <td>(less than or equal to)</td>
        </tr>
        <tr>
            <td span="2">
                <input type="submit" value="Find" />
                <input type="reset" value="Reset" />
            </td>
        </tr>
    </table>
</form>

<!-- Omitted Error Checking / Needs to be added -->
<% if (type === "post") { %>
    <% if (result.result.length === 0) { %>
        <h3>No records found!</h3>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>VIN</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Mileage</th>
                </tr>
            </thead>
            <tbody>
                <% Array.from(result.result).forEach(car => { %> 
                    <tr>
                        <td><%= car.carvin %></td>
                        <td><%= car.carmake %></td>
                        <td><%= car.carmodel %></td>
                        <td><%= car.carmileage %></td>
                    </tr>
                <% }); %>
            </tbody>

        </table>
    <% } %>
<% } %>

<%- include("_footer") -%>   