<%- include("_header") -%>

<h1> Reports </h1>
<form action="/report" method="POST">
<select name="report" id="report">
    <option <%= a %> value="alllname">All Customers - Sorted by Customer Last Name, First Name</option>
    <option <%= b %> value="allsalesd">Sorted by Current Total Sales Decreasing</option>
    <option <%= c %> value="threerandom">Three Random Customers - Promotional Giveaway (Not Repeating) </option>
</select>
<input type="submit" value="Run Report" />
</form>


<!-- Omitted Error Checking / Needs to be added -->
<% if (type === "post") { %>
    <% if (result.result.length === 0) { %>
        <script>
        $('.selDiv option')
        .filter(function(i, e) { return $(e).text() == dropdownVals})
        </script>
        <h3>No records found!</h3>
    <% } else { %>
        <script>
            $('.selDiv option')
            .filter(function(i, e) { return $(e).text() == dropdownVals})
            </script>
        <h4>Number of Records Found: <%=result.result.length %></h4>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>State</th>
                    <th>Sales YTD</th>
                    <th>Previous Years Sales</th>
                </tr>
            </thead>
            
            <tbody>
                <% Array.from(result.result).forEach(customer => { %> 
                    <tr>
                        <td><%= customer.cusid %></td>
                        <td><%= customer.cusfname %></td>
                        <td><%= customer.cuslname %></td>
                        <td><%= customer.cusstate %></td>
                        <td><%= customer.cussalesytd %></td>
                        <td><%= customer.cussalesprev %></td>
                        <td class="d-print-none">
                            <a class="btn btn-sm btn-warning" href="/edit/<%= customer.cusid %>">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/delete/<%= customer.cusid %>">Delete</a>
                          </td>
                    </tr>
                <% }); %>
            </tbody>

        </table>
    <% } %>
<% } %>

<script>
    var e = document.getElementById("report")
    var strUser = e.value;
    var strUser = e.options[e.allsalesd].text;
</script>

