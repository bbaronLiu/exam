<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cusid">ID</label>
  <div class="col-sm-8">
    <input readonly type="number" autofocus class="form-control" name="cusid" value="<%= model.cusid %>" pattern="[0-9]{0,100}" required />
    <td>(Required)</td>
  </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusfname">First Name</label>
    <div class="col-sm-8">
      <input type="text" autofocus class="form-control" name="cusfname" value="<%= model.cusfname %>" required />
      <td>(Required)</td>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cuslname">Last Name</label>
    <div class="col-sm-7">
      <input type="text" class="form-control" name="cuslname" value="<%= model.cuslname %>" required />
      <td>(Required)</td>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusstate">State</label>
    <div class="col-sm-7">
      <input type="text" class="form-control" name="cusstate" value="<%= model.cusstate %>" pattern="[a-z]{2,2}"  />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cussalesytd">Sales YTD</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" name="cussalesytd" value="<%= model.cussalesytd %>" />
    </div>
  </div>

  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cussalesprev">Previous Years Sales</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" name="cussalesprev" value="<%= model.cussalesprev %>" />
    </div>
  </div>

